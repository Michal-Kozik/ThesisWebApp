@{
    ViewData["Title"] = "Matching Sentences | Save";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model MatchingSentencesSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>ŁĄCZENIE ZDAŃ - ZAPISANO</b></h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>Udało się zapisać.</p>
        </div>
    </div>
</div>

<div class="container-fluid">
    @for (int i = 0; i < Model.NumberOfSentences; i++)
    {
        <div class="row">
            <div class="col text-center">
                <p class="lead">@(i+1). @Model.SentencesFirstPart[i] ... @Model.SentencesSecondPart[i]</p>
            </div>
        </div>
    }
    <div class="row">
        <div class="col text-center">
            <br />
            <button class="btn btn-primary" disabled>Zapisano</button>
        </div>
    </div>
</div>