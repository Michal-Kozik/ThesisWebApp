@{
    ViewData["Title"] = "Matching Sentences | Result";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model MatchingSentencesSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>ŁĄCZENIE ZDAŃ - REZULTAT</b></h1>
</div>

<div class="container-fluid">
    @for (int i = 0; i < Model.NumberOfSentences; i++)
    {
        <div class="row">
            <div class="col text-center">
                <p class="lead">@(i+1). @Model.SentencesFirstPart[i] ... @Model.SentencesSecondPart[i]</p>
            </div>
        </div>
    }
    <div class="row">
        <div class="col text-center">
            <form method="post">
                @*Przekazanie danych dalej*@
                @Html.HiddenFor(m => m.ExerciseName, new { Value = Model.ExerciseName })
                @Html.HiddenFor(m => m.NumberOfSentences, new { Value = Model.NumberOfSentences })
                @for (int i = 0; i < Model.NumberOfSentences; i++)
                {
                    @Html.HiddenFor(m => m.SentencesFirstPart[i], new { Value = Model.SentencesFirstPart[i] });
                    @Html.HiddenFor(m => m.SentencesSecondPart[i], new { Value = Model.SentencesSecondPart[i] });
                }
                <br />
                <button asp-controller="MatchingSentences" asp-action="Save" type="submit" class="btn btn-primary">Zapisz</button>
            </form>
        </div>
    </div>
</div>