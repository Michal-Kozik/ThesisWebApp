@{
    ViewData["Title"] = "Translating Words | Settings";
}
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model TranslatingWordsSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TŁUMACZENIE SŁÓW - UZUPEŁNIANIE</b></h1>
</div>

<div class="container-fluid">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row justify-content-center">
            <div class="col-5 text-center">
                <p>Polski</p>
            </div>
            <div class="col-2"></div>
            <div class="col-5 text-center">
                <p>Angielski</p>
            </div>
        </div>
        @for (int i = 0; i < Model.NumberOfWords; i++)
        {
            <div class="row">
                <div class="col-5">
                    <div class="form-group">
                        <input asp-for="TranslateFromArray[i]" class="form-control" />
                    </div>
                </div>
                <div class="col-2 text-center">
                    <p>-</p>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <input asp-for="TranslateToArray[i]" class="form-control" />
                    </div>
                </div>
            </div>
        }
        <br />
        @Html.HiddenFor(m => m.NumberOfWords, new { Value = Model.NumberOfWords })
        @Html.HiddenFor(m => m.ExerciseName, new { Value = Model.ExerciseName })
        @Html.HiddenFor(m => m.Level, new { Value = Model.Level })
        <button asp-controller="TranslatingWords" asp-action="Add" type="submit" class="btn btn-primary">Zapisz</button>
    </form>
</div>