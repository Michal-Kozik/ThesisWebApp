@{
    ViewData["Title"] = "Translating Words | Result";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model TranslatingWordsSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TŁUMACZENIE SŁÓW - REZULTAT</b></h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <table class="table">

                <thead>
                    <tr class="table-primary">
                        <th style="text-align:center; vertical-align:middle">
                            PL
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            ENG
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.NumberOfWords; i++)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle">
                                @Model.TranslateFromArray[i]
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Model.TranslateToArray[i]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <form method="post">
                @Html.HiddenFor(m => m.NumberOfWords, new { Value = Model.NumberOfWords })
                @for (int i = 0; i < Model.NumberOfWords; i++)
                {
                    @Html.HiddenFor(m => m.TranslateFromArray[i], new { Value = Model.TranslateFromArray[i] });
                    @Html.HiddenFor(m => m.TranslateToArray[i], new { Value = Model.TranslateToArray[i] });
                }
                <button asp-controller="TranslatingWords" asp-action="Save" class="btn btn-primary">Zapisz</button>
            </form>
        </div>
    </div>
</div>