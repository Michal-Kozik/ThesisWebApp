@{
    ViewData["Title"] = "Translating Words | Save";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model TranslatingWordsSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TŁUMACZENIE SŁÓW - ZAPISANO</b></h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col text-center">
            <p>Udało się zapisać.</p>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-primary">
                        <th style="text-align:center; vertical-align:middle">
                            Tłumaczenie z:
                        </th>
                        <th style="text-align:center; vertical-align:middle">
                            Tłumaczenie na:
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.NumberOfWords; i++)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align:middle">
                                @Model.TranslateFromArray[i]
                            </td>
                            <td style="text-align:center; vertical-align:middle">
                                @Model.TranslateToArray[i]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>