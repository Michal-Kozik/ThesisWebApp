@{
    ViewData["Title"] = "Exercises | Attempt";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model TranslatingWordsSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>ZADANIE - TŁUMACZENIE SŁÓW</b></h1>
</div>

<div class="container-fluid">
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-5 text-center">
                <p>Tłumaczenie z:</p>
            </div>
            <div class="col-2"></div>
            <div class="col-5 text-center">
                <p>Tłumaczenie na:</p>
            </div>
        </div>
        @*Przekazanie wartosci z obecnego modelu do nowego za pomoca hidden.*@
        @Html.HiddenFor(m => m.NumberOfWords, new { Value = Model.NumberOfWords })
        @Html.HiddenFor(m => m.Level, new { Value = Model.Level })
        @for (int i = 0; i < Model.NumberOfWords; i++)
        {
            <div class="row">
                <div class="col-5">
                    <div class="form-group">
                        <p class="lead">@Model.TranslateFromArray[i]</p>
                        @Html.HiddenFor(m => m.TranslateFromArray[i], new { Value = Model.TranslateFromArray[i] })
                        @Html.HiddenFor(m => m.TranslateToArray[i], new { Value = Model.TranslateToArray[i] })
                    </div>
                </div>
                <div class="col-2 text-center">
                    <p>-</p>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <input asp-for="UserAnswers[i]" class="form-control" />
                    </div>
                </div>
            </div>
        }
        <button asp-controller="Exercise" asp-action="TranslatingWordsScore" type="submit" class="btn btn-primary">Dalej</button>
    </form>
</div>