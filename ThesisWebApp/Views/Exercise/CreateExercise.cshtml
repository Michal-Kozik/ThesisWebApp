@{
    ViewData["Title"] = "Exercise | Create";
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>ĆWICZENIA</b></h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exercise" asp-action="Index">Informacje</a>
                <a class="list-group-item list-group-item-action active" asp-area="" asp-controller="Exercise" asp-action="CreateExercise">Stwórz ćwiczenie</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exercise" asp-action="ListExercises">Lista ćwiczeń</a>
            </div>
        </div>
        <div class="col-9">
            <div class="card border-dark mb-3">
                <div class="card-header">Tworzenie ćwiczenia</div>
                <div class="card-body">
                    <h4 style="font-family:'Mistral'"><b>JAK DZIAŁA TWORZENIE ĆWICZEŃ?</b></h4>
                    <p class="lead">
                        Informacje jak się tworzy ćwiczenia.
                    </p>
                    <br />
                    <p class="lead">
                        Typ zadania:
                    </p>
                    <a class="btn btn-outline-primary" asp-controller="TranslatingWords" asp-action="Settings">Tłumaczenie słów</a>
                </div>
            </div>
        </div>
    </div>
</div>