@{
    ViewData["Title"] = "Exercises | Score";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model MatchingSentencesSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>ZADANIE - ŁĄCZENIE ZDAŃ</b></h1>
</div>

<div class="container-fluid">
    <form method="post">
        @for (int i = 0; i < Model.NumberOfSentences; i++)
        {
            <div class="row justify-content-center">
                <div class="col-4 text-end">
                    <p class="lead">@Model.SentencesFirstPart[i]</p>
                </div>
                @if (Model.UserAnswers[i] == Model.SentencesSecondPart[i])
                {
                    <div class="col-4">
                        <input value="@Model.UserAnswers[i]" class="form-control is-valid" readonly />
                    </div>
                }
                else
                {
                    <div class="col-4">
                        <input value="@Model.UserAnswers[i]" class="form-control is-invalid" readonly />
                    </div>
                }
                <div class="col-4">
                    <input value="@Model.SentencesSecondPart[i]" class="form-control" readonly />
                </div>
            </div>
        }
        <div class="row">
            <p>@ViewBag.points / @Model.NumberOfSentences</p>
        </div>
        <a class="btn btn-primary" asp-controller="Exercise" asp-action="ListExercises">Wróc</a>
    </form>
</div>