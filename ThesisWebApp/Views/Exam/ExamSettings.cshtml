@{
    ViewData["Title"] = "Exams | Save";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model ExamViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TEST - KONFIGURACJA</b></h1>
</div>

<div class="container-fluid">
    <form method="post">
        <div class="row">
            <div class="col-6">
                @*Wybrane zadania*@
                @foreach (var exercise in Model.Exercises)
                {
                    <div class="row">
                        <div class="col">
                            <div class="card border-primary mb-3">
                                <div class="card-header text-center">
                                    @exercise.Name
                                </div>
                                <div class="card-body text-center">
                                    <p class="lead mb-0">Typ zadania: @exercise.TypeOfExercise.ToString().Replace('_', ' ')</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col">
                        @*Widocznosc testu*@
                        <label asp-for="Visible"></label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" asp-for="Visible" class="form-check-input" checked />
                                <span class="lead">Publiczny</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @*Wiele podejsc do testu*@
                        <label asp-for="ManyAttempts"></label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" asp-for="ManyAttempts" class="form-check-input" checked />
                                <span class="lead">Dowolna ilość podejść</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @*Haslo do testu*@
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @*Nazwa testu*@
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <button asp-controller="Exam" asp-action="ExamSettings" class="btn btn-primary mt-3">Zapisz</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>