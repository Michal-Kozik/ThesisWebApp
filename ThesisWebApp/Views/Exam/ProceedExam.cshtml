@{
    ViewData["Title"] = "Exam | Proceed";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model StartExamViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TEST</b></h1>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6 text-center">
            <p class="lead">ID: @Model.ExamID</p>
            <p class="lead">Ten test jest chroniony hasłem. Aby go wykonać musisz podać hasło dostępu.</p>
            @if (!String.IsNullOrEmpty(Model.ExamPassword))
            {
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="lead">Hasło</label>
                        <input asp-for="InputPassword" type="password" class="form-control" />
                    </div>
                    @Html.HiddenFor(m => m.ExamID, new { Value = Model.ExamID })
                    @Html.HiddenFor(m => m.ExamPassword, new { Value = Model.ExamPassword })
                    <button asp-controller="Exam" asp-action="ProceedExam" type="submit" class="btn btn-primary mt-3">Rozpocznij</button>
                </form>
            }
        </div>
    </div>
</div>