@{
    ViewData["Title"] = "Exam | My exams";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model PaginatedList<Exam>
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>TESTY</b></h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exam" asp-action="Index">Informacje</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exam" asp-action="PublicExams">Publiczne testy</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exam" asp-action="DoneExams">Zrobione testy</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exam" asp-action="ExamsResults">Wyniki testów</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Exam" asp-action="CreateExam">Stwórz test</a>
                <a class="list-group-item list-group-item-action active" asp-area="" asp-controller="Exam" asp-action="MyExams">Moje testy</a>
            </div>
        </div>
        <div class="col-9">
            <div class="card border-dark mb-3">
                <div class="card-header">Moje testy</div>
                <div class="card-body">
                    @if (Model.TotalPages < Model.PageIndex)
                    {
                        <p class="lead">Brak wyników...</p>
                    }
                    else
                    {
                        @foreach (var exam in Model)
                        {
                            <div class="list-group">
                                <a class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5>@exam.Name</h5>
                                        @if (!String.IsNullOrEmpty(exam.Password))
                                        {
                                            <i class="material-icons-outlined">lock</i>
                                        }
                                    </div>
                                    <p class="mb-1">Widoczność: @(exam.Visible ? "Publiczny" : "Prywatny")</p>
                                    <p class="mb-1">ID zadań: @exam.ExercisesPattern</p>
                                </a>
                            </div>
                        }
                        <br />
                        var prevDisabled = Model.HasPreviousPage ? "" : "disabled";
                        var nextDisabled = Model.HasNextPage ? "" : "disabled";
                        <div>
                            <ul class="pagination justify-content-center">
                                <li class="page-item @prevDisabled">
                                    <a asp-controller="Exam" asp-action="MyExams" asp-route-pageNumber="@(Model.PageIndex - 1)" class="page-link">&laquo;</a>
                                </li>
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a asp-controller="Exam" asp-action="MyExams" asp-route-pageNumber="@(Model.PageIndex - 1)" class="page-link">@(Model.PageIndex - 1)</a>
                                    </li>
                                }
                                <li class="page-item active">
                                    <a class="page-link">@Model.PageIndex</a>
                                </li>
                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a asp-controller="Exam" asp-action="MyExams" asp-route-pageNumber="@(Model.PageIndex + 1)" class="page-link">@(Model.PageIndex + 1)</a>
                                    </li>
                                }
                                <li class="page-item @nextDisabled">
                                    <a asp-controller="Exam" asp-action="MyExams" asp-route-pageNumber="@(Model.PageIndex + 1)" class="page-link">&raquo;</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
