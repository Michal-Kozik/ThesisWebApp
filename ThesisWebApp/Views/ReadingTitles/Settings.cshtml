@{
    ViewData["Title"] = "Reading - Titles | Settings";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model ReadingTitlesSettingsViewModel
}

<div class="border-bottom" style="margin-bottom: 20px">
    <h1 style="font-family:'Mistral'"><b>DOPASOWYWANIE TYTUŁÓW (CZYTANIE) - KONFIGURACJA</b></h1>
</div>

<div class="container-fluid">
    <form method="post">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="ExerciseName"></label>
                    <input asp-for="ExerciseName" class="form-control" />
                    <span asp-validation-for="ExerciseName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                @*Poziom trudnosci*@
                <label class="lead" asp-for="Level"></label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="0" class="form-check-input" checked />
                        Nieznany
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="1" class="form-check-input" />
                        A1
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="2" class="form-check-input" />
                        A2
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="3" class="form-check-input" />
                        B1
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="4" class="form-check-input" />
                        B2
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="5" class="form-check-input" />
                        C1
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Level" value="6" class="form-check-input" />
                        C2
                    </label>
                </div>
            </div>
            <div class="col-3">
                @*Ilosc nadmiarowych tytulow*@
                <label class="lead" asp-for="NumberOfAdditionalTitles"></label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="1" class="form-check-input" checked />
                        1 nadmiarowy tytuł
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="2" class="form-check-input" />
                        2 nadmiarowe tytuły
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="3" class="form-check-input" />
                        3 nadmiarowe tytuły
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="4" class="form-check-input" />
                        4 nadmiarowe tytuły
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="5" class="form-check-input" />
                        5 nadmiarowych tytułów
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfAdditionalTitles" value="6" class="form-check-input" />
                        6 nadmiarowych tytułów
                    </label>
                </div>
            </div>
            <div class="col-3">
                @*Ilosc akapitow*@
                <label class="lead" asp-for="NumberOfParagraphs"></label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfParagraphs" value="4" class="form-check-input" checked />
                        4 akapity
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfParagraphs" value="5" class="form-check-input" />
                        5 akapitów
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" asp-for="NumberOfParagraphs" value="6" class="form-check-input" />
                        6 akapitów
                    </label>
                </div>
            </div>
            <div class="col-3">
                @*Widocznosc testu*@
                <div class="lead">Widoczność</div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="Visible"></label>
                    <input class="form-check-input" type="checkbox" asp-for="Visible" />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <button asp-controller="ReadingTitles" asp-action="Settings" type="submit" class="btn btn-primary">Dalej</button>
        </div>
    </form>    
</div>