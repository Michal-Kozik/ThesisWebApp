@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h1>Edycja Roli</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nazwa roli</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Zaktualizuj</button>
            <a asp-action="ListRoles" class="btn btn-primary">Anuluj</a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <p class="lead">Użytkownicy z tą rolą</p>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <p class="card-title">@user</p>
                }
            }
            else
            {
                <h5 class="card-title">Brak</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Dodaj lub usuń użytkownika</a>
        </div>
    </div>
</form>
